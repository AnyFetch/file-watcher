#!/usr/bin/env node

"use strict";

var fs = require('fs');
var read = require("read");
var saveSync = require('../lib/helpers/file').saveSync;

var start = require('../lib');

if (process.argv.length < 3) {
  console.warn("You have to provide a directory");
  process.exit(1);
}

// Is it a directory?
if (!fs.lstatSync(process.argv[2]).isDirectory()) {
  console.warn("The directory provided is invalid");
  process.exit(1);
}


if (!process.argv[3]) {
  read({prompt: 'Token: ', silent: true}, function(err, token) {
    start(process.argv[2], token, function() {});
  });
}
else {
  start(process.argv[2], process.argv[3], function() {});
}

process.on('SIGINT', function() {
  saveSync();
  process.exit(0);
});
process.on('SIGTERM', function() {
  saveSync();
  process.exit(0);
});
