#!/usr/bin/env node

"use strict";

var fs = require('fs');
var read = require("read");

var filewatcher = require('../lib');

if (process.argv.length < 3) {
  console.warn("You have to provide a directory");
  process.exit(1);
}

// Is it a directory?
if (!fs.lstatSync(process.argv[2]).isDirectory()) {
  console.warn("The directory provided is invalid");
  process.exit(1);
}


if (!process.argv[3]) {
  read({prompt: 'Token: ', silent: true}, function(err, token) {
    filewatcher(process.argv[3], token, function() {});
  });
}
else {
  filewatcher(process.argv[3], process.argv[2], function() {});
}

filewatcher.sendToAnyfetch(function() {});
filewatcher.watch();
